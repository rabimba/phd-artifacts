% ================================================================================
% Color Accents
% ================================================================================

\definecolor{uhred2}{HTML}{C8102E}
\definecolor{uhred}{HTML}{C8102E}
\definecolor{polyugrey}{HTML}{58595B}
\definecolor{skyblue}{HTML}{6BA4B8}

\setbeamercolor{title}{fg=white}
\setbeamercolor{author}{fg=white}
\setbeamercolor{date}{fg=white}
\setbeamercolor{head}{bg=uhred2}

\setbeamercolor{alerted text}{fg=uhred}
\setbeamercolor{normal text}{fg=darkgray,bg=white}
\setbeamercolor{structure}{fg=uhred}

\setbeamercolor{jumbo}{bg=uhred}
\setbeamercolor{progress bar}{fg=uhred,bg=polyugrey}
\setbeamercolor{progress bar progress}{use=progress bar,bg=progress bar.fg}

\hypersetup{
